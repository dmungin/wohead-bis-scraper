
local _, core = ...;
local LootAlert = core.LootAlert;

local function loadBis ()
    local spec0 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "0")
    local spec1 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "1")
    local spec2 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "2")
    local spec3 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "3")
    local spec4 = LootAlert:RegisterSpec("{{class}}", "{{spec}}", "4")

    {{#each currentPhaseItems}}
    LootAlert:AddItem(spec4, "{{itemId}}", "{{slot}}", "{{#if isBis}}BIS{{else}}Alt{{/if}}") --{{name}}
    {{/each}}
end

table.insert(LootAlert.state.bisListLoadFunctions, loadBis);
